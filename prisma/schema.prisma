generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

/// --- Clinic (Multi-Tenant) ---
model Clinic {
  id                 String               @id @default(cuid())
  name               String
  subdomain          String               @unique
  customDomain       String?              @unique
  logoUrl            String?
  primaryColor       String?              @default("#3B82F6")
  secondaryColor     String?              @default("#10B981")
  config             Json?
  isActive           Boolean              @default(true)
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  AssessmentResponse AssessmentResponse[]
  JournalEntry       JournalEntry[]
  ModuleProgress     ModuleProgress[]
  profiles           Profile[]
  users              User[]

  @@index([subdomain])
  @@index([customDomain])
}

/// --- Auth.js (NextAuth) tables ---
model User {
  id                 String               @id @default(cuid())
  email              String?
  name               String?
  image              String?
  emailVerified      DateTime?
  passwordHash       String?
  guest              Boolean?             @default(false)
  intakeFinished     Boolean              @default(false)
  clinicId           String?
  clinician          String               @default("")
  accounts           Account[]
  AssessmentResponse AssessmentResponse[]
  JournalEntry       JournalEntry[]
  ModuleProgress     ModuleProgress[]
  profile            Profile?
  sessions           Session[]
  clinic             Clinic?              @relation(fields: [clinicId], references: [id], onDelete: Cascade)

  @@unique([email, clinicId])
  @@index([clinicId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String? @db.Text
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId], map: "Account_userId_fkey")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], map: "Session_userId_fkey")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

/// --- Your Profile persistence (JSON blob) ---
model Profile {
  userId            String    @id @default(cuid())
  json              Json
  version           Int       @default(1)
  updatedAt         DateTime  @updatedAt
  age               String?
  email             String?
  firstName         String?
  firstSubmittedAt  DateTime? @default(now())
  genderIdentity    String?
  highestDegree     String?
  isEmployed        Boolean?
  lastName          String?
  race              String?
  sexualOrientation String?
  contactNumber     String?
  isChild           Boolean?
  clinicId          String?
  clinic            Clinic?    @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([clinicId])
  @@index([clinicId, firstSubmittedAt])
}

model AssessmentResponse {
  id             String    @id @default(cuid())
  userId         String
  clinicId       String    @default("default-clinic")
  assessmentType String
  responses      Json
  totalScore     Int?
  assignedAt     DateTime?
  completedAt    DateTime?
  requestedBy    String?
  dueDate        DateTime?
  Clinic         Clinic    @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  User           User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([clinicId, completedAt])
  @@index([clinicId])
  @@index([userId, assessmentType, completedAt])
  @@index([userId, completedAt])
}

model JournalEntry {
  id              String   @id @default(cuid())
  userId          String
  clinicId        String   @default("default-clinic")
  content         String   @db.Text
  mood            Int
  sentimentResult Json?
  createdAt       DateTime @default(now())
  updatedAt       DateTime
  Clinic          Clinic   @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  User            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([clinicId, createdAt])
  @@index([clinicId])
  @@index([userId, createdAt])
}

model ModuleProgress {
  id             String         @id @default(cuid())
  userId         String
  clinicId       String
  moduleId       String
  currentStep    Int            @default(0)
  isCompleted    Boolean        @default(false)
  completedAt    DateTime?
  startedAt      DateTime       @default(now())
  lastAccessAt   DateTime
  Clinic         Clinic         @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  PsychoedModule PsychoedModule @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  User           User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, moduleId])
  @@index([clinicId])
  @@index([moduleId], map: "ModuleProgress_moduleId_fkey")
  @@index([userId])
}

model PsychoedModule {
  id             String           @id @default(cuid())
  title          String
  description    String           @db.Text
  category       String
  content        Json
  totalSteps     Int
  duration       Int?
  ageGroup       String           @default("both")
  isActive       Boolean          @default(true)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime
  ModuleProgress ModuleProgress[]

  @@index([category])
  @@index([isActive])
}
